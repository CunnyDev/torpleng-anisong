{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "prConcurrentLimit": 3,
  "minor": {
    "automerge": true
  },
  "major": {
    "automerge": false
  },
  "automergeType": "pr",
  "prCreation": "immediate",
  "semanticCommitScope": "deps",
  "dockerfile": {
    "semanticCommitType": "build"
  },
  "ignorePresets": ["workarounds:typesNodeVersioning"]
}
